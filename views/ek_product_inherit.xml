<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_inherit_form" model="ir.ui.view">
        <field name="name">product.template.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <div name="options" position="inside">
                <group>
                    <group>
                        <field name="image_url" class="oe_edit_only" invisible="1"/>
                        <field name="create_by" invisible="1"/>
                        <field name="manufacture_name"/>
                        <div style="display: flex; align-items: center;">
                            <label for="constructor_ref" style="display: inline-block; margin-right: 5px;">Constructor
                                Ref:
                            </label>

                            <field name="constructor_ref" style="margin-right: 10px;"/>
                            <button name="action_generate_reference" icon="fa-files-o" class="oe_highlight"
                                    type="object"/>
                        </div>
                    </group>
                </group>
            </div>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="product_product_inherit_form" model="ir.ui.view">
        <field name="name">product.product.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='standard_price_uom']" position="after">
                <field name="reference"/>
                <field name="certificate"/>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>

